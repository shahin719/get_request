<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="abdolhossein.kolali.getrequest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityMain"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityMoshavereh"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActivityVakil"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActivityTextVakil"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActivityTextMoshavereh"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActivityArshiv"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActivityTextArshiv"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <receiver android:name=".Task"/>
    </application>
</manifest>